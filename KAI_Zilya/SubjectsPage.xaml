<Page x:Class="KAI_Zilya.SubjectsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KAI_Zilya"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Таблица &quot;Предметы&quot;">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Таблица &quot;Предметы&quot;" Grid.Column="1"
                   Grid.Row="1"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Foreground="Blue"/>
        <TextBlock x:Name="tb_count"
                   Grid.Column="1"
                   Grid.Row="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   FontSize="16"/>
        
        <TextBlock Text="Наименование предмета" 
                   Grid.Column="1"
                   Grid.Row="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   FontSize="16"/>
        <TextBox x:Name="tb_Title"
                 Grid.Column="1"
                 Grid.Row="3"
                 Height="30"/>

        <TextBlock Text="Описание предмета" 
                   Grid.Column="1"
                   Grid.Row="4"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   FontSize="16"/>
        <TextBox x:Name="tb_Description"
                 Grid.Column="1"
                 Grid.Row="5"
                 Height="30"/>

        <Button x:Name="btn_back"
                Content="Назад"
                Grid.Column="0"
                Grid.Row="0"
                Height="30"
                Width="100"
                HorizontalAlignment="Left"
                VerticalAlignment="Top" Click="btn_back_Click"/>

        <Button x:Name="btn_next"
                Content="Следующая"
                Grid.Column="1"
                Grid.Row="6"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Click="btn_next_Click"/>
        <Button x:Name="btn_previous"
                Content="Предыдущая"
                Grid.Column="1"
                Grid.Row="6"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="btn_previous_Click"/>

        <Button x:Name="btn_add"
                Content="Создать"
                Grid.Column="2"
                Grid.Row="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="btn_add_Click"/>

        <Button x:Name="btn_delete"
                Content="Удалить"
                Grid.Column="2"
                Grid.Row="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Click="btn_delete_Click"/>

        <Button x:Name="btn_edit"
                Content="Редактировать"
                Grid.Column="2"
                Grid.Row="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Click="btn_edit_Click"/>

    </Grid>
</Page>
