<Page x:Class="KAI_Zilya.StudentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KAI_Zilya"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StudentsPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Таблица &quot;Студент&quot;" Grid.Column="1"
                   Grid.Row="1"
                   Grid.ColumnSpan="3"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Foreground="Blue"/>

        <TextBlock x:Name="tb_count"
                   Grid.Column="2"
                   Grid.Row="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   FontSize="16"/>

        <Button x:Name="btn_back"
                Content="Назад"
                Grid.Column="0"
                Grid.Row="0"
                Height="30"
                Width="100"
                HorizontalAlignment="Left"
                VerticalAlignment="Top" 
                Click="btn_back_Click"/>
        
        <Button x:Name="btn_next"
                Content="Следующая"
                Grid.Column="2"
                Grid.Row="16"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Click="btn_next_Click"/>
        <Button x:Name="btn_previous"
                Content="Предыдущая"
                Grid.Column="2"
                Grid.Row="16"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="btn_previous_Click"/>

        <Button x:Name="btn_add"
                Content="Создать"
                Grid.Column="3"
                Grid.Row="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="btn_add_Click"/>

        <Button x:Name="btn_delete"
                Content="Удалить"
                Grid.Column="3"
                Grid.Row="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Click="btn_delete_Click"/>

        <Button x:Name="btn_edit"
                Content="Редактировать"
                Grid.Column="4"
                Grid.Row="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Click="btn_edit_Click"/>

        <TextBlock Text="ФИО: "
                   Grid.Column="1"
                   Grid.Row="3"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"/>
        <TextBox x:Name="tb_FIO"
                 Grid.Column="2"
                 Grid.Row="3"
                 Height="20"
                 VerticalAlignment="Top"/>
        <TextBlock Text="Пол: "
                   Grid.Column="1"
                   Grid.Row="4"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"/>
        <TextBox x:Name="tb_Gender"
                 Grid.Column="2"
                 Grid.Row="4"
                 Height="20"
                 VerticalAlignment="Top"/>
        <TextBlock Text="Дата рождения: "
                   Grid.Column="1"
                   Grid.Row="5"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"/>
        <DatePicker x:Name="dp_Birth"
                 Grid.Column="2"
                 Grid.Row="5"
                 VerticalAlignment="Top"/>
        <TextBlock Text="Родители: "
                   Grid.Column="1"
                   Grid.Row="6"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"/>
        <TextBox x:Name="tb_Parents"
                 Grid.Column="2"
                 Grid.Row="6"
                 Height="20"
                 VerticalAlignment="Top"/>
        <TextBlock Text="Адрес: "
                   Grid.Column="1"
                   Grid.Row="7"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"/>
        <TextBox x:Name="tb_Address"
                 Grid.Column="2"
                 Grid.Row="7"
                 Height="20"
                 VerticalAlignment="Top"/>
        <TextBlock Text="Теелфон: "
                   Grid.Column="1"
                   Grid.Row="8"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"/>
        <TextBox x:Name="tb_Phone"
                 Grid.Column="2"
                 Grid.Row="8"
                 Height="20"
                 VerticalAlignment="Top"/>
        <TextBlock Text="Паспорт: "
                   Grid.Column="1"
                   Grid.Row="9"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"/>
        <TextBox x:Name="tb_Pasport"
                 Grid.Column="2"
                 Grid.Row="9"
                 Height="20"
                 VerticalAlignment="Top"/>
        <TextBlock Text="Номер зачётки: "
                   Grid.Column="1"
                   Grid.Row="10"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"/>
        <TextBox x:Name="tb_CreditCard"
                 Grid.Column="2"
                 Grid.Row="10"
                 Height="20"
                 VerticalAlignment="Top"/>
        <TextBlock Text="Дата поступления: "
                   Grid.Column="1"
                   Grid.Row="11"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"/>
        <DatePicker x:Name="dp_Receipt"
                 Grid.Column="2"
                 Grid.Row="11"
                 VerticalAlignment="Top"/>
        <TextBlock Text="Группа: "
                   Grid.Column="1"
                   Grid.Row="12"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"/>
        <TextBox x:Name="tb_Group"
                 Grid.Column="2"
                 Grid.Row="12"
                 Height="20"
                 VerticalAlignment="Top"/>
        <TextBlock Text="Курс: "
                   Grid.Column="1"
                   Grid.Row="13"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"/>
        <TextBox x:Name="tb_Course"
                 Grid.Column="2"
                 Grid.Row="13"
                 Height="20"
                 VerticalAlignment="Top"/>
        <TextBlock Text="Специальность: "
                   Grid.Column="1"
                   Grid.Row="14"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"/>
        <ComboBox x:Name="cb_Specialitets"
                 Grid.Column="2"
                 Grid.Row="14"
                 Height="20"
                 VerticalAlignment="Top"/>
        <TextBlock Text="Очная форма обучения: "
                   Grid.Column="1"
                   Grid.Row="15"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"/>
        <CheckBox x:Name="cb_FullTime"
                  Grid.Column="2"
                  Grid.Row="15"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"/>
    </Grid>
</Page>
